package meniu.com;

import java.util.Scanner;


public class Main {

	public static void main(String[] args) {
			Scanner sc = new Scanner(System.in);
			System.out.println("Meniu Restaurant Memorandului:");
			System.out.println("Optiunea 1: Carne de pui");
			System.out.println("Optiunea 2: Carne de porc");
			System.out.println("Optiunea 3: Peste la gratar");
			System.out.println("Optiunea 4: Cartofi");
			System.out.println("Alege ce bagi in tine!:");
			
			int op = sc.nextInt();
			switch (op) {
			case 1: System.out.println( "Ai ales Carne de pui.Buna alegere!");break;
			case 2: System.out.println( "Ai ales Carne de porc.Guitzzzz!");break;
			case 3: System.out.println( "Ai ales Peste la gratar.Tasty! ");break;
			case 4: System.out.println( "Äi ales cartofi.Nicee!");break;
			}

	}

}
